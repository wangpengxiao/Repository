<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:gravity="top"
        android:orientation="horizontal"
        android:padding="10px" >

        <ImageView
            android:id="@+id/tab1_listView_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"/>
        <TextView
            android:id="@+id/tab1_listView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tab1_listView_pic"
            android:bufferType="spannable"
            android:paddingLeft="10px"
            android:paddingRight="5px"
         	android:textColor="#626970"
        	android:shadowDx="1"
       		android:shadowDy="1"
        	android:shadowRadius="1" 
        	android:shadowColor="@color/white"            
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tab1_listView_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tab1_listView_title"
            android:layout_toRightOf="@id/tab1_listView_pic"
            android:paddingTop="3px"
            android:paddingLeft="12px"
            android:textColor="#575757"
            android:textSize="10sp" />
    </RelativeLayout>  
    

