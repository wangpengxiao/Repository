        android:paddingLeft="25dp"
        android:paddingRight="25dp" >

        <!-- 标签页02 过滤选项 -->

        <LinearLayout
            android:id="@+id/open_layout_right_page2_select_condition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="15dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="15dp" >

                        <!-- 标签页02 过滤选项 套餐类型 -->

                        <RelativeLayout
                            android:id="@+id/open_layout_right_page2_item1"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="25dp"
                            android:paddingTop="3dp" >

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/line_gradient_h" />

                            <RelativeLayout
                                android:id="@+id/open_layout_right_page2_package_type"
                                android:layout_width="115dp"
                                android:layout_height="fill_parent" >

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/line_gradient_v" />

                                <Button
                                    android:id="@+id/open_layout_right_page2_package_type_title"
                                    android:layout_width="100dp"
                                    android:layout_height="fill_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:text="套餐类型"
                                    android:textColor="@drawable/text_btn_selector"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@id/open_layout_right_page2_package_type_title"
                                    android:src="@drawable/arrow_more" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/open_layout_right_page2_package_type_value"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toRightOf="@id/open_layout_right_page2_package_type"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="不限"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <!-- 标签页02 过滤选项 套餐类型 -->
