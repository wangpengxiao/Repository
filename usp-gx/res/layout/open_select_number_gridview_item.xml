<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/open_select_number_gridView_item"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:background="@drawable/item_selected_bg"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/grid_item_style"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/open_select_number_gridView_accNbr"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="13333333333"
            android:textColor="@color/black"
            android:textSize="22sp" 
            android:paddingTop="10dp">
        </TextView>

        <TextView
            android:id="@+id/open_select_number_gridView_fee"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/open_select_number_gridView_accNbr"
            android:gravity="center_horizontal"
            android:text="预存300元 月基本费300元"
            android:textColor="@color/black"
            android:textSize="12sp" 
            android:paddingBottom="10dp">
        </TextView>
    </RelativeLayout>

</LinearLayout>