<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/open_layout_right_page1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/open_layout_right_page1_footer"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp" >

        <!-- 标签页01 过滤选项 -->

        <LinearLayout
            android:id="@+id/open_layout_right_page1_select_condition"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingRight="15dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingRight="15dp" >

                        <!-- 标签页01 过滤选项 电信类型 -->

                        <RelativeLayout
                            android:id="@+id/open_layout_right_page1_item1"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginTop="25dp"
                            android:paddingTop="3dp" >

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/line_gradient_h" />

                            <RelativeLayout
                                android:id="@+id/open_layout_right_page1_tele_type"
                                android:layout_width="115dp"
                                android:layout_height="fill_parent" >

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/line_gradient_v" />

                                <Button
                                    android:id="@+id/open_layout_right_page1_tele_type_title"
                                    android:layout_width="100dp"
                                    android:layout_height="fill_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:text="电信类型"
                                    android:textColor="@drawable/text_btn_selector"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@id/open_layout_right_page1_tele_type_title"
                                    android:src="@drawable/arrow_more" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/open_layout_right_page1_tele_type_value"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toRightOf="@id/open_layout_right_page1_tele_type"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="2G"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <!-- 标签页01 过滤选项 号码自定义 -->

                        <RelativeLayout
                            android:id="@+id/open_layout_right_page1_item2"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/open_layout_right_page1_item1"
                            android:paddingTop="3dp" >

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/line_gradient_h" />

                            <RelativeLayout
                                android:id="@+id/open_layout_right_page1_number_define"
                                android:layout_width="115dp"
                                android:layout_height="fill_parent" >

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/line_gradient_v" />

                                <Button
                                    android:id="@+id/open_layout_right_page1_number_define_title"
                                    android:layout_width="100dp"
                                    android:layout_height="fill_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:text="号码自定义"
                                    android:textColor="@drawable/text_btn_selector"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@id/open_layout_right_page1_number_define_title"
                                    android:src="@drawable/arrow_more" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/open_layout_right_page1_number_define_value"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toRightOf="@id/open_layout_right_page1_number_define"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="不限"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginTop="25dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingLeft="15dp" >

                        <!-- 标签页01 过滤选项 预存话费 -->

                        <RelativeLayout
                            android:id="@+id/open_layout_right_page1_item3"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/open_layout_right_page1_item2"
                            android:paddingTop="3dp" >

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/line_gradient_h" />

                            <RelativeLayout
                                android:id="@+id/open_layout_right_page1_prepaid"
                                android:layout_width="115dp"
                                android:layout_height="fill_parent" >

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/line_gradient_v" />

                                <Button
                                    android:id="@+id/open_layout_right_page1_prepaid_title"
                                    android:layout_width="100dp"
                                    android:layout_height="fill_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:text="预存话费"
                                    android:textColor="@drawable/text_btn_selector"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/open_layout_right_page1_prepaid_title"
                                    android:src="@drawable/arrow_more" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/open_layout_right_page1_prepaid_value"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toRightOf="@+id/open_layout_right_page1_prepaid"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="不限"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <!-- 标签页01 过滤选项 靓号类型 -->

                        <RelativeLayout
                            android:id="@+id/open_layout_right_page1_item4"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/open_layout_right_page1_item3"
                            android:paddingTop="3dp" >

                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:layout_alignParentBottom="true"
                                android:background="@drawable/line_gradient_h" />

                            <RelativeLayout
                                android:id="@+id/open_layout_right_page1_number_type"
                                android:layout_width="115dp"
                                android:layout_height="fill_parent" >

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentRight="true"
                                    android:background="@drawable/line_gradient_v" />

                                <Button
                                    android:id="@+id/open_layout_right_page1_number_type_title"
                                    android:layout_width="100dp"
                                    android:layout_height="fill_parent"
                                    android:background="@android:color/transparent"
                                    android:gravity="center_vertical"
                                    android:text="靓号类型"
                                    android:textColor="@drawable/text_btn_selector"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_toRightOf="@+id/open_layout_right_page1_number_type_title"
                                    android:src="@drawable/arrow_more" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/open_layout_right_page1_number_type_value"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toRightOf="@+id/open_layout_right_page1_number_type"
                                android:gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:text="不限"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="40dp" >

                        <Button
                            android:id="@+id/open_layout_right_page1_searching"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/button_query_selector"
                            android:text="查询"
                            android:textSize="15sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@drawable/usp_block_bg"
                android:orientation="vertical"
                android:paddingLeft="15dp" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="3dp" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/line_gradient_h" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="已选号码"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/open_layout_right_page1_selected_phone"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:shadowColor="#55000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="3"
                    android:text="未选择号码"
                    android:textColor="@color/red"
                    android:textSize="40sp" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/open_select_number_viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/open_layout_right_page1_select_condition"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="25dp"
            android:clickable="true"
            android:focusable="true" />
    </RelativeLayout>

    <!-- 标签页01 footer -->

    <LinearLayout
        android:id="@+id/open_layout_right_page1_footer"
        android:layout_width="fill_parent"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <!--
             <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#c5c5c5" />
        -->

        <Button
            android:id="@+id/open_layout_right_page1_next_step"
            style="@style/usp_btn_common_style"
            android:text="@string/button_next" />
    </LinearLayout>

</RelativeLayout>