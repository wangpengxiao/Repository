                                    android:layout_height="fill_parent" >

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="fill_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/line_gradient_v" />

                                    <Button
