                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_toRightOf="@+id/open_layout_right_page3_danbao_type"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="15dp"
                                    android:text=""
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingRight="15dp" >

                            <RelativeLayout
                                android:id="@+id/open_layout_right_page3_item4"
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:paddingTop="3dp" >

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/line_gradient_h" />

                                <RelativeLayout
                                    android:id="@+id/open_layout_right_page3_action_select"
                                    android:layout_width="125dp"
                                    android:layout_height="fill_parent" >

                                    <View
                                        android:layout_width="1dp"
                                        android:layout_height="fill_parent"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/line_gradient_v" />

                                    <Button
                                        android:id="@+id/open_layout_right_page3_action_select_title"
