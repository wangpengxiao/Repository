                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:paddingTop="3dp" >

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_alignParentBottom="true"
                                    android:background="@drawable/line_gradient_h" />

                                <RelativeLayout
