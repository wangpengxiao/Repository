                                    android:textSize="16sp" />
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/open_layout_right_page3_phone_type_value"
                                android:layout_width="185dp"
                                android:layout_height="fill_parent"
                                android:layout_toRightOf="@+id/open_layout_right_page3_phone_type"
                                android:background="@android:color/transparent"
