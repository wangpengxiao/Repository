                                        android:layout_height="fill_parent"
                                        android:background="@android:color/transparent"
                                        android:gravity="center_vertical"
                                        android:text="担保类型"
                                        android:textColor="@drawable/text_btn_selector"
                                        android:textSize="16sp" />

                                    <ImageView
