                android:layout_height="40dp" >

                <RelativeLayout
                    android:id="@+id/open_layout_right_page3_item1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:paddingTop="3dp" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/line_gradient_h" />

                    <RelativeLayout
                        android:id="@+id/open_layout_right_page3_action_choice"
                        android:layout_width="175dp"
                        android:layout_height="fill_parent" >

                        <Button
                            android:id="@+id/open_layout_right_page3_action_choice_title"
                            android:layout_width="200dp"
                            android:layout_height="fill_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center_vertical"
                            android:text="是否参加合约计划"
                            android:textColor="@drawable/text_btn_selector"
                            android:textSize="18sp" />
                    </RelativeLayout>

                    <TextView
