<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   	android:background="@drawable/content_bg"
    android:orientation="vertical" >

    <include layout="@layout/app_head_1btn" />

    <ScrollView
        android:id="@+id/Scroll"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/competitor_relative01"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp" >

                <LinearLayout
                    android:id="@+id/linear01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/title_competitor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginTop="10dp"
                            android:text="@string/title_com"
                            android:textColor="#FDA63C"
                            android:textSize="22sp" />

                        <ImageView
                            android:id="@+id/competitor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/title_competitor"
                            android:layout_toLeftOf="@id/title_competitor"
                            android:src="@drawable/competitor" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/View01"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/comp_name"
                        android:textColor="#A88A59"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000" />

                    <EditText
                        android:id="@+id/edit01"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/View03"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/operators"
                        android:textColor="#A88A59"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000" />

                    <Spinner
                        android:id="@+id/spinner_add_competitor"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:entries="@array/operator"
                        android:prompt="@string/prompt" />

                    <TextView
                        android:id="@+id/View04"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/photo"
                        android:textColor="#A88A59"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000" />

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:tools="http://schemas.android.com/tools"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        tools:context=".MainActivity" >

                        <ImageView
                            android:id="@+id/edit04"
                            android:layout_width="204dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp" />
                        <!-- android:background="#00ff00" -->
                        <!-- android:padding="3dp"/> -->

                        <ImageButton
                            android:id="@+id/camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/edit04"
                            android:layout_margin="2dp"
                            android:layout_toRightOf="@id/edit04"
                            android:src="@drawable/camera" />

                        <ImageButton
                            android:id="@+id/VCR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/edit04"
                            android:layout_margin="2dp"
                            android:layout_toRightOf="@id/edit04"
                            android:src="@drawable/vcr" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/View10"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="图片参数"
                        android:textColor="#A88A59"
                        android:textSize="20sp" />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000" />
                    <TableLayout 
                        android:id="@+id/add_competitor_table_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:shrinkColumns="5"
            			android:stretchColumns="5">
                        <TableRow android:paddingTop="15dip">
                           
                            <TextView 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="x坐标"/>
                           <EditText 
                               android:id="@+id/add_pic_x"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               />
                              <TextView 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="y坐标"/>
                              <EditText 
                               android:id="@+id/add_pic_y"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               />
                               <TextView 
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="图片个数"/>
                              <EditText 
                               android:id="@+id/add_pic_num"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:layout_marginRight="20dp"
                               />
                        </TableRow>
                    </TableLayout>

                    <TextView
                        android:id="@+id/View05"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/introduce"
                        android:textColor="#A88A59"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000" />

                    <EditText
                        android:id="@+id/edit05"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/View06"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/address"
                        android:textColor="#A88A59"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000" />

                    <EditText
                        android:id="@+id/edit06"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:id="@+id/View07"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/description"
                        android:textColor="#A88A59"
                        android:textSize="20sp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:background="#000000" />

                    <EditText
                        android:id="@+id/edit07"
                        android:layout_width="256dp"
                        android:layout_height="100dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="0.36" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
